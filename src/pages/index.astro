<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Square Expansion Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #f5f5f5;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(9, 50px); /* Начальная ширина сетки */
      grid-auto-rows: 50px; /* Высота строки */
      gap: 1px;
      background-color: #ccc;
    }

    .cell {
      width: 50px;
      height: 50px;
      background-color: #fff;
      border: 1px solid #ccc;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .cell.active {
      background-color: #cce5ff;
      border-color: #007bff;
    }

    .cell:hover {
      background-color: #e0e0e0;
    }
  </style>
</head>
<body>
  <div id="grid" class="grid">
    <!-- Изначальная центральная ячейка -->
    <div class="cell active" data-x="0" data-y="0">Start</div>
  </div>

  <script>
    const grid = document.getElementById('grid');

    // Храним активные ячейки по координатам
    const activeCells = new Set(["0,0"]);

    // Смещения для соседей (по квадратной сетке)
    const neighborOffsets = [
      { x: 0, y: -1 },  // Верх
      { x: 1, y: 0 },   // Право
      { x: 0, y: 1 },   // Низ
      { x: -1, y: 0 },  // Лево
    ];

    // Добавление новой ячейки
    function addCell(x, y) {
      // Если ячейка уже существует, ничего не делаем
      if (activeCells.has(`${x},${y}`)) return;

      // Создаем новую ячейку
      const newCell = document.createElement('div');
      newCell.classList.add('cell');
      newCell.dataset.x = x;
      newCell.dataset.y = y;

      // Добавляем обработчик клика
      newCell.addEventListener('click', () => activateCell(x, y));

      // Добавляем в сетку
      grid.appendChild(newCell);
    }

    // Активация ячейки и добавление соседей
    function activateCell(x, y) {
      // Если ячейка уже активна, ничего не делаем
      if (activeCells.has(`${x},${y}`)) return;

      // Добавляем ячейку в активные
      activeCells.add(`${x},${y}`);
      const currentCell = document.querySelector(`[data-x="${x}"][data-y="${y}"]`);
      if (currentCell) {
        currentCell.classList.add('active');
        currentCell.textContent = "Active";
      }

      // Добавляем соседние ячейки
      neighborOffsets.forEach(offset => {
        const newX = x + offset.x;
        const newY = y + offset.y;
        addCell(newX, newY);
      });
    }

    // Инициализация начальной ячейки
    document.querySelector('.cell.active').addEventListener('click', () => activateCell(0, 0));
  </script>
</body>
</html>
